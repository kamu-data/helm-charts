{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "app": {
      "type": "object",
      "required": [
        "config",
        "datasetRepositoryUrl",
        "authGithubClientId",
        "authGithubClientSecret",
        "jwtSecret",
        "apiBaseUrlPlatform",
        "apiBaseUrlRest",
        "apiBaseUrlFlightsql"
      ],
      "properties": {
        "config": {
          "type": "object",
          "required": [],
          "properties": {}
        },
        "datasetRepositoryUrl": {
          "type": "string",
          "format": "uri"
        },
        "apiBaseUrlPlatform": {
          "type": "string",
          "format": "uri"
        },
        "apiBaseUrlRest": {
          "type": "string",
          "format": "uri"
        },
        "apiBaseUrlFlightsql": {
          "type": "string",
          "format": "uri"
        },
        "authGithubClientId": {
          "type": "string"
        },
        "authGithubClientSecret": {
          "type": "string"
        },
        "jwtSecret": {
          "type": "string"
        },
        "awsCredentials": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "existingSecret": {
              "type": "string"
            },
            "awsEndpoint": {
              "type": "string"
            },
            "awsRegion": {
              "type": "string"
            },
            "awsAccessKeyId": {
              "type": "string"
            },
            "awsSecretAccessKey": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
